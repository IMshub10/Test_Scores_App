<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Math_And_Go_Assignment" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSurface">@color/white_hole</item>
        <item name="colorOnSurface">@color/grey_lightest</item>

        <item name="colorError">@color/red_light</item>
        <item name="colorAccent">@color/black</item>

        <item name="android:colorBackground">@color/white_hole</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorBackgroundFloating">@color/grey_lightest</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="statusBarForeground">?attr/colorOnPrimary</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:colorEdgeEffect">@color/transparent</item>

        <item name="android:textColorLink">@color/blue_dark</item>
        <item name="colorHint">@color/grey_dark</item>>

        <item name="label">@color/black</item>
        <item name="labelSecondary">@color/grey_darkest</item>
        <item name="labelTertiary">@color/opaque_0.3</item>
        <item name="colorGreen">@color/green_light</item>

        <item name="colorSeparator">@color/separator_light</item>
        <item name="iconColorPrimary">@color/blue_light</item>
        <item name="iconColorSecondary">?attr/labelSecondary</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <!--Image View Style=============================================================================-->
    <style name="ImageViewShape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!--Separator====================================================================================-->
    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorSeparator</item>
    </style>

    <!--Text Styles==================================================================================-->
    <style name="text_header" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight" tools:targetApi="p">25.5sp</item>
        <item name="android:letterSpacing">0.012</item>
        <item name="android:textColor">?attr/label</item>
    </style>

    <style name="text_body" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight" tools:targetApi="p">21sp</item>
        <item name="lineHeight">21sp</item>
        <item name="android:letterSpacing">0.016</item>
        <item name="android:textColor">?attr/label</item>
    </style>

    <style name="text_caption" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight" tools:targetApi="p">18sp</item>
        <item name="android:letterSpacing">0.016</item>
        <item name="android:textColor">?attr/labelSecondary</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorOnPrimary">?attr/colorPrimary</item>
        <item name="endIconDrawable">@drawable/ic_baseline_keyboard_arrow_down_24</item>
        <item name="endIconTint">@color/blue_light</item>
    </style>
</resources>